<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"

        tools:context="com.example.micka.demosalefinder.MapActivity">

    </fragment>

    <Button
        android:id="@+id/zoomOut"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="60dp"
        android:background="#ffffff"
        android:text="-"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="onZoomOutClick"/>

    <Button
        android:id="@+id/zoomIn"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="110dp"
        android:background="#ffffff"
        android:text="+"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="onZoomInClick"/>

    <ImageView
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="75dp"
        android:src="@drawable/filter"
        android:clickable="true"
        android:onClick="onFilterClick"/>

    <ImageView
        android:id="@+id/accountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="75dp"
        android:src="@drawable/account"
        android:clickable="true"
        android:onClick="onAccountClick"/>

    <ImageView
        android:id="@+id/favoriteSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:src="@drawable/favoritesymbol"
        android:clickable="true"
        android:onClick="onFavoriteShopsClick"/>

</FrameLayout>