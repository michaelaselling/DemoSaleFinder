<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marmorbackground"
    tools:context="com.example.micka.demosalefinder.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="175dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="onBackClick"
            android:src="@drawable/back"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="LÃ¤gg till i favoriter"
            android:textColor="#404040"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/logo"
            android:background="#ffffff"
            android:clickable="true"
            android:onClick="onSaveFavoriteShopsClick"
            android:text="Spara"
            android:textAllCaps="false"
            android:textColor="#404040"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="OnClick" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/logo"
            android:layout_marginTop="21dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/webhallen"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/webhallen" />

                <ImageView
                    android:id="@+id/favoriteWebhallen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />


                <ImageView
                    android:id="@+id/teknikmagasinet"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/teknikmagasinet" />

                <ImageView
                    android:id="@+id/favoriteTeknikmagasinet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/hifiklubben"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hifiklubben" />

                <ImageView
                    android:id="@+id/favoriteHifiklubben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/kjellochcompany"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/kjellochcompany" />

                <ImageView
                    android:id="@+id/favoriteKjellochcompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/timberland"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/timberland" />

                <ImageView
                    android:id="@+id/favoriteTimberland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/ecco"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ecco" />

                <ImageView
                    android:id="@+id/favoriteEcco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/scorett"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/scorett" />

                <ImageView
                    android:id="@+id/favoriteScorett"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/hm"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/hm" />

                <ImageView
                    android:id="@+id/favoriteHm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/ginatricot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ginatricot" />

                <ImageView
                    android:id="@+id/favoriteGinatricot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/lindex"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/lindex" />

                <ImageView
                    android:id="@+id/favoriteLindex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

                <ImageView
                    android:id="@+id/kappahl"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/kappahl" />

                <ImageView
                    android:id="@+id/favoriteKappahl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:onClick="onFavoriteShopClick"
                    app:srcCompat="@drawable/favoritesymbol"
                    tools:ignore="OnClick" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
